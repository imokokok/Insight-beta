{
  "dashboard": {
    "id": null,
    "uid": "oracle-monitor",
    "title": "Oracle Monitor - 系统监控",
    "tags": ["oracle", "monitoring", "blockchain"],
    "timezone": "UTC",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "protocol",
          "type": "query",
          "query": "label_values(oracle_price_fetch_total, protocol)",
          "multi": true,
          "includeAll": true
        },
        {
          "name": "symbol",
          "type": "query",
          "query": "label_values(oracle_price_fetch_total, symbol)",
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "价格获取速率",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(oracle_price_fetch_total[5m])",
            "legendFormat": "{{protocol}} - {{symbol}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "价格获取延迟",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(oracle_price_fetch_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(oracle_price_fetch_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (s)",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "WebSocket 连接数",
        "type": "stat",
        "targets": [
          {
            "expr": "oracle_websocket_connections",
            "legendFormat": "{{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "内存使用",
        "type": "graph",
        "targets": [
          {
            "expr": "oracle_process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "RSS (MB)"
          },
          {
            "expr": "oracle_process_heap_bytes / 1024 / 1024",
            "legendFormat": "Heap (MB)"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 }
      },
      {
        "id": 5,
        "title": "缓存命中率",
        "type": "gauge",
        "targets": [
          {
            "expr": "oracle_cache_hit_ratio",
            "legendFormat": "{{cache_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 0.5 },
                { "color": "green", "value": 0.8 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 }
      },
      {
        "id": 6,
        "title": "区块链调用延迟",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(oracle_blockchain_call_duration_seconds_bucket[5m]))",
            "legendFormat": "{{chain}} - {{method}}"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (s)",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 7,
        "title": "服务健康状态",
        "type": "table",
        "targets": [
          {
            "expr": "oracle_service_health",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Value" },
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    { "options": { "0": { "text": "❌ Unhealthy" } }, "type": "value" },
                    { "options": { "1": { "text": "✅ Healthy" } }, "type": "value" }
                  ]
                }
              ]
            }
          ]
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
      },
      {
        "id": 8,
        "title": "错误率",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(oracle_price_fetch_total{status=\"error\"}[5m]) / rate(oracle_price_fetch_total[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate",
            "min": 0,
            "max": 1
          }
        ],
        "alert": {
          "name": "High Error Rate",
          "message": "Error rate is above 5%",
          "conditions": [
            {
              "evaluator": { "params": [0.05], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "type": "avg" }
            }
          ]
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 9,
        "title": "协议分布",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (protocol) (oracle_price_fetch_total)",
            "legendFormat": "{{protocol}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
      }
    ]
  }
}
