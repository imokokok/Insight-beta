  "screenshots": [
    {
      "src": "/screenshot-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard View"
    },
    {
      "src": "/screenshot-2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Protocol Comparison"
    },
    {
      "src": "/screenshot-mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Dashboard"
    },
    {
      "src": "/screenshot-mobile-dark.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Dark Mode"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View oracle dashboard",
      "url": "/oracle/dashboard",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Comparison",
      "short_name": "Compare",
      "description": "Compare oracle protocols",
      "url": "/oracle/comparison",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "My Assertions",
      "short_name": "Assertions",
      "description": "View my oracle assertions",
      "url": "/my-assertions",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Alerts",
      "short_name": "Alerts",
      "description": "View price alerts",
      "url": "/alerts",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+oracle",
      "url": "/handle?uri=%s"
    },
    {
      "protocol": "web+insight",
      "url": "/handle?uri=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "related_applications": [],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "widgets": [
    {
      "name": "Oracle Price Widget",
      "short_name": "Price",
      "description": "Quick view of oracle prices",
      "tag": "oracle-price",
      "template": "oracle-price-widget",
      "ms_ac_template": "/widget-price.html",
      "data": "/api/widget/price",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/widget-screenshot.png",
          "sizes": "300x200",
          "type": "image/png"
        }
      ],
      "icons": [
        {
          "src": "/widget-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ]
}
