{
  "name": "oracle-monitor",
  "version": "0.1.0",
  "private": true,
  "description": "Universal Oracle Monitoring Platform - Multi-protocol oracle data monitoring and aggregation",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "node .next/standalone/server.js",
    "check:prod": "node scripts/post-deploy-check.js",
    "lint": "eslint src --max-warnings=100",
    "lint:security": "eslint src --rule 'security/*:error'",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "supabase:provision": "node scripts/provision-supabase.mjs",
    "contracts:compile": "HARDHAT_DISABLE_TELEMETRY=1 hardhat compile",
    "contracts:test": "HARDHAT_DISABLE_TELEMETRY=1 hardhat test",
    "contracts:deploy": "HARDHAT_DISABLE_TELEMETRY=1 hardhat run scripts/deploy.js",
    "contracts:deploy:polygon": "HARDHAT_DISABLE_TELEMETRY=1 hardhat run scripts/deploy.js --network polygon",
    "contracts:deploy:arbitrum": "HARDHAT_DISABLE_TELEMETRY=1 hardhat run scripts/deploy.js --network arbitrum",
    "contracts:deploy:amoy": "HARDHAT_DISABLE_TELEMETRY=1 hardhat run scripts/deploy.js --network polygonAmoy",
    "contracts:transfer-owner": "HARDHAT_DISABLE_TELEMETRY=1 hardhat run scripts/transfer-ownership.cjs",
    "contracts:transfer-owner:polygon": "HARDHAT_DISABLE_TELEMETRY=1 hardhat run scripts/transfer-ownership.cjs --network polygon",
    "contracts:transfer-owner:arbitrum": "HARDHAT_DISABLE_TELEMETRY=1 hardhat run scripts/transfer-ownership.cjs --network arbitrum",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html",
    "bench": "vitest run src/server/benchmark/",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage:fail": "vitest run --coverage --exit-on-failure",
    "test:coverage:threshold": "vitest run --coverage --passWithNoThresholdErrors",
    "analyze:bundle": "node scripts/analyze-bundle.mjs",
    "docs:api": "node scripts/generate-api-docs.mjs",
    "i18n:extract": "tsx scripts/extract-translation-keys.ts",
    "i18n:validate": "tsx scripts/validate-translations.ts",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "prepare": "husky"
  },
  "dependencies": {
    "@opentelemetry/auto-instrumentations-node": "0.67.3",
    "@opentelemetry/exporter-trace-otlp-http": "0.210.0",
    "@opentelemetry/resources": "2.4.0",
    "@opentelemetry/sdk-node": "0.210.0",
    "@opentelemetry/semantic-conventions": "1.38.0",
    "@opentelemetry/winston-transport": "0.19.0",
    "@openzeppelin/contracts": "5.4.0",
    "@sentry/nextjs": "8.49.0",
    "@types/swagger-ui-react": "^5.18.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "isomorphic-dompurify": "^2.35.0",
    "lucide-react": "0.562.0",
    "next": "15.5.9",
    "next-swagger-doc": "^0.4.1",
    "nodemailer": "^7.0.12",
    "pg": "8.16.3",
    "puppeteer": "^24.36.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-virtuoso": "4.18.1",
    "recharts": "3.6.0",
    "redis": "^4.7.1",
    "sonner": "2.0.7",
    "swagger-ui-react": "^5.31.0",
    "swr": "2.3.8",
    "tailwind-merge": "3.4.0",
    "viem": "2.43.5",
    "web-vitals": "4.2.4",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-ignition": "^0.15.16",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.17",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomicfoundation/ignition-core": "^0.15.15",
    "@playwright/test": "^1.58.0",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "4.3.20",
    "@types/mocha": "10.0.10",
    "@types/node": "20.19.0",
    "@types/nodemailer": "6.4.17",
    "@types/pg": "8.16.0",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@typescript-eslint/eslint-plugin": "8.24.0",
    "@typescript-eslint/parser": "8.24.0",
    "@vitejs/plugin-react": "5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "10.4.20",
    "chai": "^4.5.0",
    "critters": "0.0.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.5.9",
    "eslint-plugin-perfectionist": "4.3.0",
    "eslint-plugin-security": "3.0.1",
    "ethers": "^6.16.0",
    "hardhat": "2.28.3",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "9.1.7",
    "jsdom": "27.4.0",
    "lint-staged": "16.2.7",
    "monkey-around": "3.0.0",
    "playwright": "^1.58.0",
    "postcss": "8.4.49",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "solidity-coverage": "^0.8.17",
    "tailwindcss": "3.4.17",
    "ts-node": "10.9.2",
    "typechain": "^8.3.2",
    "typescript": "5.7.3",
    "vitest": "4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "!next-env.d.ts": [],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
